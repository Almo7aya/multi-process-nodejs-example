{ 
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins":[
    "import"
  ],
  "rules": {
    "strict": ["error", "global"],
    "import/order": ["error"],
    "import/no-unresolved": ["error", { "commonjs": true }],
    "prefer-arrow-callback": ["error"]
  }
}